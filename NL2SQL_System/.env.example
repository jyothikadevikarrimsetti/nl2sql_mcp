# Environment Configuration

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-key-change-in-prod

# MySQL Database Configuration
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=nl2sql_user
MYSQL_PASSWORD=nl2sql_pass
MYSQL_DATABASE=nl2sql_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_USER=
REDIS_PASSWORD=

# OpenAI Configuration (optional - only needed if not using Azure)
# Leave empty to use Azure AI instead
# OPENAI_API_KEY=
# OPENAI_MODEL=gpt-4-turbo

# Azure AI Configuration (Primary - used when AZURE_AI_ENDPOINT is set)
AZURE_AI_ENDPOINT=
AZURE_AI_API_KEY=
AZURE_OPENAI_DEPLOYMENT=
AZURE_AI_API_VERSION=2024-02-15-preview

# Application Configuration
APP_HOST=0.0.0.0
APP_PORT=8001
APP_DEBUG=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# CORS Configuration
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*